# Image Tag (e.g., 1.7.0, latest)
IMAGE_TAG=latest

# Database Configuration (REQUIRED - no defaults in production)
DB_USER=
DB_PASSWORD=
DB_NAME=

# Redis Cache
REDIS_CONNECTION_STRING=bitfinance-cache:6379

# JWT Configuration (REQUIRED - no defaults in production)
# Generate a secure key: openssl rand -hex 32
JWT_KEY=
JWT_ISSUER=
JWT_AUDIENCE=
JWT_EXPIRATION=60

# Azure Key Vault Configuration (REQUIRED in production)
KEYVAULT_URL=
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# Cache Settings
CACHE_ENABLED=true
