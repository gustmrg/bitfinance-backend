{
  "ApplicationName": "bitfinance-api",
  "ConnectionStrings": {
    "Database": "${POSTGRES_CONNECTION_STRING}",
    "Cache": "${REDIS_CONNECTION_STRING}"
  },
  "Auth0": {
    "Authority": "${AUTH0_AUTHORITY}",
    "Audience": "${AUTH0_AUDIENCE}"
  },
  "AppSettings": {
    "CacheEnabled": false,
    "LoggingEnabled": true
  },
  "Serilog":  {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "ElasticSearch": {
    "Uri": "http://localhost:9200"
  },
  "AllowedHosts": "*"
}
