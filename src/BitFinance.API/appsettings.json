{
  "ApplicationName": "bitfinance-api",
  "AppSettings": {
    "CacheEnabled": false,
    "LoggingEnabled": true
  },
  "ConnectionStrings": {
    "Database": "<connection-string-here>",
    "Cache": "<connection-string-here>"
  },
  "Jwt": {
    "Key": "<secret-key-with-at-least-256-bits>",
    "Issuer": "https://localhost:3000/bitfinance",
    "Audience": "https://localhost:3000/bitfinance",
    "ExpirationInMinutes": 120
  },
  "Cors": {
    "AllowedOrigins": ["https://localhost:3000", "http://localhost:3000"]
  },
  "Storage": {
    "LocalPath": "./documents",
    "MaxFileSizeInMB": 10,
    "AllowedExtensions": [".pdf", ".jpg", ".jpeg", ".png", ".doc", ".docx"]
  },
  "Serilog":  {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
